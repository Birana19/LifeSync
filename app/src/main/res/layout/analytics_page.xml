<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/analytics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="200dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/Analytics"
                android:textColor="#090909"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView87"
                android:layout_width="356dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/analytics"
                app:srcCompat="@drawable/background_white" />

            <ImageView
                android:id="@+id/imageView88"
                android:layout_width="356dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView87"
                app:srcCompat="@drawable/background_white" />

            <ImageView
                android:id="@+id/imageView89"
                android:layout_width="356dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView88"
                app:srcCompat="@drawable/background_white" />

            <ImageView
                android:id="@+id/imageView90"
                android:layout_width="356dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView89"
                app:srcCompat="@drawable/background_white" />

            <ImageView
                android:id="@+id/imageView91"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView87"
                app:layout_constraintStart_toStartOf="@+id/imageView87"
                app:layout_constraintTop_toTopOf="@+id/imageView87"
                app:srcCompat="@drawable/goal_icon" />

            <ImageView
                android:id="@+id/imageView92"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView88"
                app:layout_constraintStart_toStartOf="@+id/imageView88"
                app:layout_constraintTop_toTopOf="@+id/imageView88"
                app:srcCompat="@drawable/streak_icon" />

            <ImageView
                android:id="@+id/imageView93"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView89"
                app:layout_constraintStart_toStartOf="@+id/imageView89"
                app:layout_constraintTop_toTopOf="@+id/imageView89"
                app:srcCompat="@drawable/analytics" />

            <ImageView
                android:id="@+id/imageView94"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView90"
                app:layout_constraintStart_toStartOf="@+id/imageView90"
                app:layout_constraintTop_toTopOf="@+id/imageView90"
                app:srcCompat="@drawable/batch_icon" />

            <TextView
                android:id="@+id/complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/completion_rate"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView87"
                app:layout_constraintEnd_toEndOf="@+id/imageView87"
                app:layout_constraintStart_toStartOf="@+id/imageView87"
                app:layout_constraintTop_toTopOf="@+id/imageView87" />

            <TextView
                android:id="@+id/due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="150dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/completion_due"
                app:layout_constraintEnd_toEndOf="@+id/imageView87"
                app:layout_constraintStart_toStartOf="@+id/imageView87"
                app:layout_constraintTop_toBottomOf="@+id/complete" />

            <TextView
                android:id="@+id/current_streak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="110dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/current_streak"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView88"
                app:layout_constraintEnd_toEndOf="@+id/imageView88"
                app:layout_constraintStart_toStartOf="@+id/imageView88"
                app:layout_constraintTop_toTopOf="@+id/imageView88" />

            <TextView
                android:id="@+id/due_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="130dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/due_2"
                app:layout_constraintEnd_toEndOf="@+id/imageView88"
                app:layout_constraintStart_toStartOf="@+id/imageView88"
                app:layout_constraintTop_toBottomOf="@+id/current_streak" />

            <TextView
                android:id="@+id/habit_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/habits_complete"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView89"
                app:layout_constraintEnd_toEndOf="@+id/imageView89"
                app:layout_constraintStart_toStartOf="@+id/imageView89"
                app:layout_constraintTop_toTopOf="@+id/imageView89" />

            <TextView
                android:id="@+id/due3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="152dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/this_week"
                app:layout_constraintEnd_toEndOf="@+id/imageView89"
                app:layout_constraintStart_toStartOf="@+id/imageView89"
                app:layout_constraintTop_toBottomOf="@+id/habit_complete" />

            <TextView
                android:id="@+id/achievement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/achievement"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView90"
                app:layout_constraintEnd_toEndOf="@+id/imageView90"
                app:layout_constraintStart_toStartOf="@+id/imageView90"
                app:layout_constraintTop_toTopOf="@+id/imageView90" />

            <TextView
                android:id="@+id/due4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="155dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/this_week"
                app:layout_constraintEnd_toEndOf="@+id/imageView90"
                app:layout_constraintStart_toStartOf="@+id/imageView90"
                app:layout_constraintTop_toBottomOf="@+id/achievement" />

            <ImageView
                android:id="@+id/imageView95"
                android:layout_width="356dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView90"
                app:srcCompat="@drawable/background_white" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/habitPieChart"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/performance"
                app:layout_constraintStart_toStartOf="@+id/imageView95"
                app:layout_constraintEnd_toEndOf="@+id/imageView95"
                android:background="@color/white"/>


            <ImageView
                android:id="@+id/imageView96"
                android:layout_width="356dp"
                android:layout_height="200dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView95"
                app:srcCompat="@drawable/background_white" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/moodTrendChart"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/imageView96"
                app:layout_constraintStart_toStartOf="@+id/imageView96"
                app:layout_constraintTop_toTopOf="@+id/imageView96" />


            <TextView
                android:id="@+id/performance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="130dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/week_performance"
                android:textColor="#181717"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView95"
                app:layout_constraintStart_toStartOf="@+id/imageView95"
                app:layout_constraintTop_toTopOf="@+id/imageView95" />

            <TextView
                android:id="@+id/trend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="200dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/mood_trend"
                android:textColor="#050505"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView96"
                app:layout_constraintStart_toStartOf="@+id/imageView96"
                app:layout_constraintTop_toTopOf="@+id/imageView96" />

            <TextView
                android:id="@+id/achievements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="210dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/achievement"
                android:textColor="#101010"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView96" />

            <ImageView
                android:id="@+id/imageView98"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="80dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView97"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/achievements"
                app:srcCompat="@drawable/background_white" />

            <ImageView
                android:id="@+id/imageView97"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/achievements"
                app:srcCompat="@drawable/background_white" />

            <ImageView
                android:id="@+id/imageView99"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="200dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView98"
                app:srcCompat="@drawable/background_white" />

            <ImageView
                android:id="@+id/imageView100"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView98"
                app:layout_constraintEnd_toEndOf="@+id/imageView98"
                app:layout_constraintStart_toStartOf="@+id/imageView98"
                app:layout_constraintTop_toTopOf="@+id/imageView98"
                app:srcCompat="@drawable/streak_achievements" />

            <ImageView
                android:id="@+id/imageView101"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView97"
                app:layout_constraintEnd_toEndOf="@+id/imageView97"
                app:layout_constraintStart_toStartOf="@+id/imageView97"
                app:layout_constraintTop_toTopOf="@+id/imageView97"
                app:srcCompat="@drawable/meditation_achievement" />

            <ImageView
                android:id="@+id/imageView102"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView99"
                app:layout_constraintEnd_toEndOf="@+id/imageView99"
                app:layout_constraintStart_toStartOf="@+id/imageView99"
                app:layout_constraintTop_toTopOf="@+id/imageView99"
                app:srcCompat="@drawable/hydration_achievement" />

            <TextView
                android:id="@+id/streak_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/streak_goal"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView98"
                app:layout_constraintEnd_toEndOf="@+id/imageView98"
                app:layout_constraintStart_toStartOf="@+id/imageView98"
                app:layout_constraintTop_toBottomOf="@+id/imageView100" />

            <TextView
                android:id="@+id/hydration_hero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/hydration_hero"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView99"
                app:layout_constraintEnd_toEndOf="@+id/imageView99"
                app:layout_constraintStart_toStartOf="@+id/imageView99"
                app:layout_constraintTop_toBottomOf="@+id/imageView102" />

            <TextView
                android:id="@+id/meditation_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/meditation_goal"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imageView97"
                app:layout_constraintEnd_toEndOf="@+id/imageView97"
                app:layout_constraintStart_toStartOf="@+id/imageView97"
                app:layout_constraintTop_toBottomOf="@+id/imageView101" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@color/nav_item_color"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bottom_nav_bg"/>

</androidx.constraintlayout.widget.ConstraintLayout>
